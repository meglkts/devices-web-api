{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2020"],
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "./dist",
    "removeComments": false,
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "types": ["node", "mocha"]
  },
  "include": ["src/**/*.ts", "test/**/*"],
  "exclude": ["node_modules", "dist"]
}
